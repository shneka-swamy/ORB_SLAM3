{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 12,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "debug",
      "description": "Debug configurations",
      "hidden": false,
      "binaryDir": "cmake-build-debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "description": "Release configurations",
      "hidden": false,
      "binaryDir": "cmake-build-release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
       "name": "debug",
       "displayName": "Build Debug",
       "description": "Build the debug version",
       "configurePreset": "debug"
    },
    {
       "name": "release",
       "displayName": "Build Release",
       "description": "Build the release version",
       "configurePreset": "release"
    }
  ]
}
